#!/usr/bin/env python

USAGE="""
fx-rpc -- run programs written with garry's makeshift sockets api thing
"""

import os
import signal
import sys
import util
import time

# note: we're not using fx for parameter parsing right now...

n = int(sys.argv[1])
if n <= 0:
  print "error: n must be positive"
  os.exit(1)

peers = sys.argv[2]

port = int(sys.argv[3])

peerlist = util.readlines(peers)

pids = []

try:
  for i in range(n):
    machinename = peerlist[i]
    print "****** CONNECTING TO %s ******" % machinename
    pid = os.fork()
    if not pid:
      argv = ["ssh", machinename] + sys.argv[4:] + [
          "--rpc/n=%d"%n, "--rpc/rank=%d"%i,
          "--rpc/port=%d"%port, "--rpc/peers=%s"%peers,
          ]
      os.execvp(argv[0], argv)
    time.sleep(1)
    pids.append(pid)

  for pid in pids:
    os.waitpid(pid, 0)
except:
  for pid in pids:
    try:
      os.kill(pid, signal.SIGTERM)
    except:
      print "Kill failed"
